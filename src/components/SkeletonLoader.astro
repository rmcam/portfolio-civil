<div id="skeleton-loader" class="fixed inset-0 z-50 flex items-center justify-center bg-white dark:bg-gray-900 transition-opacity duration-500 opacity-100">
  <div class="animate-pulse flex flex-col space-y-6 w-11/12 max-w-6xl p-8 bg-gray-100 dark:bg-gray-800 rounded-lg shadow-xl">
    <!-- Header/Navbar Skeleton -->
    <div class="flex justify-between items-center mb-8">
      <div class="h-10 bg-gray-300 dark:bg-gray-700 rounded w-48"></div>
      <div class="flex space-x-4">
        <div class="h-8 bg-gray-300 dark:bg-gray-700 rounded w-20"></div>
        <div class="h-8 bg-gray-300 dark:bg-gray-700 rounded w-20"></div>
        <div class="h-8 bg-gray-300 dark:bg-gray-700 rounded w-20"></div>
      </div>
    </div>

    <!-- Hero Section Skeleton -->
    <div class="h-64 bg-gray-300 dark:bg-gray-700 rounded-lg mb-8"></div>

    <!-- Section Title Skeleton -->
    <div class="h-12 bg-gray-300 dark:bg-gray-700 rounded w-1/2 mx-auto mb-6"></div>

    <!-- Content Blocks Skeleton -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="flex flex-col space-y-3">
        <div class="h-48 bg-gray-300 dark:bg-gray-700 rounded-lg"></div>
        <div class="h-6 bg-gray-300 dark:bg-gray-700 rounded w-3/4"></div>
        <div class="h-4 bg-gray-300 dark:bg-gray-700 rounded w-full"></div>
      </div>
      <div class="flex flex-col space-y-3">
        <div class="h-48 bg-gray-300 dark:bg-gray-700 rounded-lg"></div>
        <div class="h-6 bg-gray-300 dark:bg-gray-700 rounded w-3/4"></div>
        <div class="h-4 bg-gray-300 dark:bg-gray-700 rounded w-full"></div>
      </div>
      <div class="flex flex-col space-y-3">
        <div class="h-48 bg-gray-300 dark:bg-gray-700 rounded-lg"></div>
        <div class="h-6 bg-gray-300 dark:bg-gray-700 rounded w-3/4"></div>
        <div class="h-4 bg-gray-300 dark:bg-gray-700 rounded w-full"></div>
      </div>
    </div>

    <!-- Footer Skeleton -->
    <div class="h-16 bg-gray-300 dark:bg-gray-700 rounded-lg mt-8"></div>
  </div>
</div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const skeletonLoader = document.getElementById('skeleton-loader');
    if (skeletonLoader) {
      skeletonLoader.style.opacity = '0';
      skeletonLoader.addEventListener('transitionend', () => {
        skeletonLoader.remove();
      }, { once: true });
    }
  });
</script>
