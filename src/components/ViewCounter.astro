<div class="flex items-center gap-2 text-gray-300 text-sm">
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-eye">
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path>
    <path d="M21 12c-2.4 4 -5.4 6 -9 6s-6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6s6.6 2 9 6"></path>
  </svg>
  <span id="visitas">Cargando visitas...</span>
</div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    fetch('/contador.php')
      .then(res => res.text())
      .then(data => {
        const formattedViews = new Intl.NumberFormat('es-CO').format(parseInt(data));
        document.getElementById('visitas').textContent = `${formattedViews} Visitas`;
      })
      .catch(err => {
        document.getElementById('visitas').textContent = 'Error al cargar visitas';
        console.error(err);
      });
  });
</script>
