---
import { Image } from 'astro:assets';
import fondoPr from '../assets/Inicio/fondo-pr.webp'; // Importar la imagen directamente desde src/assets
---

<!--
  Componente Hero (sección principal) para la página de inicio.
  Muestra un título impactante, una descripción y botones de llamada a la acción,
  todo sobre una imagen de fondo.
-->
<section class="relative flex items-center justify-center text-center min-h-[calc(100vh-96px)]">
  <!-- Imagen de fondo optimizada con Astro Image -->
  <Image
    src={fondoPr}
    alt="Fondo de ingeniería civil"
    class="absolute inset-0 w-full h-full object-cover"
    loading="eager"
    decoding="async"
    widths={[768, 1024, 1440, 1920]}
    sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 100vw"
  />
  <!-- Capa de superposición oscura para mejorar la legibilidad del texto -->
  <div class="absolute inset-0 bg-black bg-opacity-60"></div>

  <!-- Contenido principal del Hero -->
  <div class="relative z-10 w-full mx-auto flex flex-col items-center px-4">
    <!-- Título principal con animación -->
    <h1 class="text-3xl sm:text-4xl md:text-7xl font-bold text-white mb-4 tracking-tight text-pretty animate-fade-in-up">
      Ingeniería civil especializada en infraestructura vial <br/> <span class="text-primary">recursos hídricos y construcción de obras civiles</span>
    </h1>
    <!-- Párrafo descriptivo con animación y énfasis -->
    <p class="text-base sm:text-lg md:text-2xl text-gray-300 mb-8 leading-relaxed text-pretty animate-fade-in-up animation-delay-200">
       Con mas de <strong class="text-white">10 años </strong>brindando soluciones seguras y eficientes.
    </p>
    <!-- Contenedor de botones de llamada a la acción -->
    <div class="flex flex-col sm:flex-row gap-4">
      <!-- Botón para descubrir servicios -->
      <a
        href="#servicios"
        class="inline-block px-8 py-4 bg-primary text-white font-bold rounded-lg shadow-lg hover:bg-red-800 hover:scale-105 transition duration-300"
      >
        Descubre Nuestros Servicios
      </a>
      <!-- Botón para ver proyectos -->
      <a
        href="#proyectos"
        class="inline-block px-8 py-4 bg-secondary text-white font-bold rounded-lg shadow-lg hover:bg-blue-800 hover:scale-105 transition duration-300"
      >
        Ver Proyectos
      </a>
    </div>
  </div>
</section>
