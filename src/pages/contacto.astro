    <script>
      // Obtención de elementos del DOM
      const contactForm = document.getElementById('contact-form');
      const successMessage = document.getElementById('success-message');
      const nameInput = document.getElementById('name');
      const emailInput = document.getElementById('email');
      const subjectInput = document.getElementById('subject');
      const messageInput = document.getElementById('message');
      const submitButton = contactForm ? contactForm.querySelector('button[type="submit"]') : null;

      const nameCheckmark = document.getElementById('name-checkmark');
      const emailCheckmark = document.getElementById('email-checkmark');
      const subjectCheckmark = document.getElementById('subject-checkmark');
      const messageCheckmark = document.getElementById('message-checkmark');

      /**
       * Valida el formulario de contacto y actualiza los iconos de verificación.
       */
      function validateForm(): boolean {
        // Asegurarse de que todos los elementos existen y son del tipo correcto
        const nameEl = nameInput;
        const emailEl = emailInput;
        const subjectEl = subjectInput;
        const messageEl = messageInput;
        const submitBtnEl = submitButton;

        if (!nameEl || !emailEl || !subjectEl || !messageEl || !submitBtnEl) {
          return false;
        }

        let allValid = true;

        // Validar Nombre
        const isNameValid = (nameEl instanceof HTMLInputElement && nameEl.value.trim() !== '');
        if (nameCheckmark) nameCheckmark.classList.toggle('hidden', !isNameValid);
        if (isNameValid) allValid = allValid && true; else allValid = false;

        // Validar Email
        const isEmailValid = (emailEl instanceof HTMLInputElement && emailEl.value.trim() !== '' && emailEl.validity.valid);
        if (emailCheckmark) emailCheckmark.classList.toggle('hidden', !isEmailValid);
        if (isEmailValid) allValid = allValid && true; else allValid = false;

        // Validar Asunto
        const isSubjectValid = (subjectEl instanceof HTMLInputElement && subjectEl.value.trim() !== '');
        if (subjectCheckmark) subjectCheckmark.classList.toggle('hidden', !isSubjectValid);
        if (isSubjectValid) allValid = allValid && true; else allValid = false;

        // Validar Mensaje
        const isMessageValid = (messageEl instanceof HTMLTextAreaElement && messageEl.value.trim() !== '');
        if (messageCheckmark) messageCheckmark.classList.toggle('hidden', !isMessageValid);
        if (isMessageValid) allValid = allValid && true; else allValid = false;

        return allValid;
      }

      // Estado inicial del botón de envío
      if (submitButton instanceof HTMLButtonElement) {
        submitButton.disabled = !validateForm();
      }

      // Añadir event listeners a los campos de entrada para validación en tiempo real
      const inputs = [nameInput, emailInput, subjectInput, messageInput];

      inputs.forEach((input) => {
        if (input) {
          input.addEventListener('input', () => {
            const isValid = validateForm();
            if (submitButton instanceof HTMLButtonElement) {
              submitButton.disabled = !isValid;
            }
          });
        }
      });

      // Manejar el envío del formulario
      if (contactForm && successMessage) {
        contactForm.addEventListener('submit', function(event) {
          if (!validateForm()) {
            event.preventDefault(); // Prevenir envío si el formulario no es válido
            return;
          }

          // Mostrar mensaje de éxito después de un breve retraso
          setTimeout(() => {
            successMessage.classList.remove('hidden');
          }, 1000);
        });
      }
    </script>
  </main>
</Layout>
